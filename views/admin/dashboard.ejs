<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">Add Post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post.id %>">
                <h2><%= post.title %></h2>
                
            </a>
            <div class="admin-post-buttons">
                <a href="/edit-post/<%= post._id %>" class="button">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
        </li>
    <% }); %>
</ul>